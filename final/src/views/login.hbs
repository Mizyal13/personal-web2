<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&amp;display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <title>login</title>
  </head>
  <body class="bg-[url(../assets/img/bg.jpg)] bg-cover">
    <div class="h-screen flex justify-center items-center">
      <div
        class="flex justify-center bg-gray-700 opacity-95 aspect-square w-1/3 rounded-3xl text-lg text-white"
      >
        <form action="/final/login" method="post">
          <img src="../assets/img/icon/logo.png" class="w-35 ml-26" alt="" />
          <label for="email">Email :</label>
          <br />
          <input
            class="bg-white text-gray-700 rounded-lg mt-2 mb-8 w-90 h-10 pl-4"
            type="email"
            id="email"
            name="email"
          />
          <br />
          <label for="password">password :</label>
          <br />
          <input
            class="bg-white text-gray-700 rounded-lg mt-2 mb-4 w-90 h-10 pl-4"
            type="password"
            id="password"
            name="password"
          />
          <br />
          {{#each messages}}
            <p class="text-red-500 mb-5 text-sm">{{this}}</p>{{/each}}
          <br />
          <button
            class="text-center rounded-xl bg-gray-500 py-1 px-6 hover:scale-110 hover:bg-gray-600"
            type="submit"
          >
            Login
          </button>
        </form>
      </div>
    </div>
  </body>
</html>