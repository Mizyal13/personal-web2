<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&amp;display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <title>register</title>
  </head>
  <body class="bg-[url(../assets/img/bg.jpg)] bg-cover">
    <div class="h-screen flex justify-center items-center">
      <div
        class="flex justify-center bg-gray-700 opacity-95 aspect-square w-1/3 rounded-3xl text-lg text-white"
      >
        <form action="/final/register" method="post">
          <h1 class="text-2xl font-bold text-center my-4">Register</h1>
          <label for="email">Name :</label>
          <br />
          <input
            class="bg-white text-gray-700 rounded-lg mt-2 mb-6 w-90 h-10 pl-4"
            type="name"
            id="name"
            name="name"
          />
          <br />
          <label for="email">Email :</label>
          <br />
          <input
            class="bg-white text-gray-700 rounded-lg mt-2 w-90 h-10 pl-4"
            type="email"
            id="email"
            name="email"
          />
          <br />
          {{#each messages}}
            <p class="text-red-600 text-sm"> {{this}} </p>
          {{/each}}
          <br />
          <label for="password">password :</label>
          <br />
          <input
            class="bg-white text-gray-700 rounded-lg mt-2 mb-4 w-90 h-10 pl-4"
            type="password"
            id="password"
            name="password"
          />
          <br />

          <button
            class="text-center rounded-xl bg-gray-500 py-1 px-6 hover:scale-110 hover:bg-gray-600"
            type="submit"
          >
            register
          </button>
        </form>
      </div>
    </div>
  </body>
</html>